<?xml version="1.0" encoding="UTF-8"?>

<suite name="Sample Suite" verbose="1" parallel="tests" thread-count="5">
    <!-- Suite level configuration (parallel execution, thread count) -->

    <test name="Test1">
        <!-- Test level configuration -->
        <groups>
            <run>
                <exclude name="smoke" /> <!-- Exclude 'smoke' group -->
                <include name="regression" /> <!-- Include 'regression' group -->
            </run>
        </groups>
        <classes>
            <class name="PracticePackage.TestNG">
                <!-- Class-level configuration -->
                <methods>
                    <include name="testMethod1" />
                    <exclude name="testMethod2" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Test2">
        <groups>
            <run>
                <exclude name="regression" /> <!-- Exclude 'regression' group -->
                <include name="smoke" /> <!-- Include 'smoke' group -->
            </run>
        </groups>
        <classes>
            <class name="PracticePackage.TestNG2">
                <methods>
                    <include name="testMethod3" />
                    <exclude name="testMethod4" />
                </methods>
            </class>
        </classes>
    </test>

    <!-- Additional test configuration with parallel execution at the method level -->
    <test name="Test3" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="integration" /> <!-- Include 'integration' group -->
            </run>
        </groups>
        <classes>
            <class name="PracticePackage.TestNG">
                <methods>
                    <include name="testMethod5" />
                    <exclude name="testMethod6" />
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test with enabled=false for a group -->
    <test name="Test4">
        <groups>
            <run>
                <enable name="smoke" value="false" /> <!-- Disable 'smoke' group -->
            </run>
        </groups>
        <classes>
            <class name="PracticePackage.TestNG2">
                <methods>
                    <include name="testMethod7" />
                    <exclude name="testMethod8" />
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test case with timeout configuration -->
    <test name="Test5">
        <parameter name="timeout" value="5000" />
        <groups>
            <run>
                <include name="sanity" />
            </run>
        </groups>
        <classes>
            <class name="PracticePackage.TestNG2">
                <methods>
                    <include name="testMethod9" />
                    <exclude name="testMethod10" />
                </methods>
            </class>
        </classes>
    </test>

    <!-- Configuring TestNG suite timeouts -->
    <listeners>
        <listener class-name="PracticePackage.EmailableReporter2" />
    </listeners>

</suite>
